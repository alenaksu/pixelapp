{
    "name": "pixelapp",
    "private": true,
    "scripts": {
        "start": "snowpack dev",
        "test": "echo \"This template does not include a test runner by default.\" && exit 1",
        "format": "prettier --write 'src/**/*.[j|t]s'",
        "lint": "prettier --check 'src/**/*.[j|t]s'",
        "build": "rimraf docs && snowpack build --base-url /pixelapp/ --out docs --treeshake",
        "start:rollup": "rimraf dist && rollup --config rollup.config.js --watch & es-dev-server --http2 --root-dir dist --app-index index.html --compatibility none --open"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.10.4",
        "@snowpack/app-scripts-lit-element": "^1.8.4",
        "@snowpack/plugin-babel": "^2.0.3",
        "@snowpack/plugin-optimize": "^0.2.1",
        "@snowpack/plugin-run-script": "^2.1.2",
        "deepmerge": "^4.2.2",
        "es-dev-server": "^1.57.3",
        "glslify": "^7.1.1",
        "parcel": "^2.0.0-beta.1",
        "postcss-modules": "^3.2.1",
        "prettier": "^2.0.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.26.4",
        "rollup-plugin-glsl": "^1.3.0",
        "rollup-plugin-string": "^3.0.0",
        "snowpack": "^2.11.1",
        "typescript": "^3.9.7"
    },
    "dependencies": {
        "@babel/plugin-proposal-class-properties": "^7.10.4",
        "@babel/plugin-proposal-decorators": "^7.10.5",
        "@spectrum-web-components/bundle": "^0.14.6",
        "@spectrum-web-components/styles": "^0.6.0",
        "@spectrum-web-components/themes": "^0.2.3",
        "lit-element": "^2.4.0"
    },
    "browerslist": [
        "Chrome > 50"
    ]
}
